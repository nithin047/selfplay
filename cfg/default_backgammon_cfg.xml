<settings>

    <global_random_seed>156</global_random_seed>

    <main_options>
        <test_functionality>1</test_functionality>
        <enable_gui>1</enable_gui>
        <enable_logs>1</enable_logs>
        <init_model>0</init_model>
        <game_playthrough>0</game_playthrough>
        <log_runthrough>0</log_runthrough>
    </main_options>

    <model>
        <model_type>MLP</model_type>
        <input_size>72</input_size>
        <output_size>1</output_size>
        <hidden_layers>[50, 50]</hidden_layers>
        <hidden_layer_activation>relu</hidden_layer_activation>
        <output_activation>none</output_activation>
    </model>

    <gameplay>
        <action_choice>random</action_choice>
        <model_choice>random</model_choice>
    </gameplay>

    <log_runthrough>
        <log_path>path\to\log</log_path>
    </log_runthrough>

</settings>
